# ConstructAI Platform - Production Environment Configuration
# Copy this file to .env for production deployment

# ======================
# Environment
# ======================
NODE_ENV=production

# ======================
# Database Configuration
# ======================
# MongoDB Atlas or self-hosted MongoDB
DATABASE_URL=mongodb://username:password@your-mongodb-host:27017/constructai?authSource=admin

# ======================
# Cache Configuration
# ======================
# Redis Cloud or self-hosted Redis
REDIS_URL=redis://:password@your-redis-host:6379

# ======================
# Authentication (REQUIRED - Change these!)
# ======================
JWT_SECRET=CHANGE-THIS-TO-A-SECURE-RANDOM-STRING-min-32-chars
JWT_REFRESH_SECRET=CHANGE-THIS-TO-ANOTHER-SECURE-RANDOM-STRING-min-32-chars
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# ======================
# OAuth2 Configuration
# ======================
GOOGLE_CLIENT_ID=your-production-google-client-id
GOOGLE_CLIENT_SECRET=your-production-google-client-secret
GOOGLE_CALLBACK_URL=https://api.yourdomain.com/api/v1/auth/google/callback

# ======================
# Server Configuration
# ======================
PORT=3001
BACKEND_URL=https://api.yourdomain.com
FRONTEND_URL=https://app.yourdomain.com

# CORS Origins (production domains only)
CORS_ORIGINS=https://app.yourdomain.com,https://www.yourdomain.com

# ======================
# Frontend Configuration
# ======================
VITE_API_URL=https://api.yourdomain.com
VITE_WS_URL=wss://api.yourdomain.com

# ======================
# File Storage
# ======================
# Google Cloud Storage (recommended for production)
GCS_BUCKET_NAME=your-production-bucket
GCS_PROJECT_ID=your-gcp-project-id
GCS_KEY_FILE=./gcs-key.json

# Local fallback
FILE_STORAGE_PATH=./uploads
MAX_FILE_SIZE=10485760

# ======================
# AI Services
# ======================
OPENAI_API_KEY=sk-your-production-openai-key

# ======================
# Monitoring & Logging
# ======================
LOG_LEVEL=warn
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ======================
# MongoDB Configuration (for self-hosted)
# ======================
MONGO_USERNAME=admin
MONGO_PASSWORD=CHANGE-THIS-TO-STRONG-PASSWORD
MONGO_DATABASE=constructai

# ======================
# Redis Configuration (for self-hosted)
# ======================
REDIS_PASSWORD=CHANGE-THIS-TO-STRONG-PASSWORD

# ======================
# Rate Limiting
# ======================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ======================
# Security Headers
# ======================
HELMET_ENABLED=true
TRUST_PROXY=true
