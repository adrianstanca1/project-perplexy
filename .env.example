# ConstructAI Platform - Environment Configuration
# Copy this file to .env and update with your actual values

# ======================
# Environment
# ======================
NODE_ENV=development

# ======================
# Database Configuration
# ======================
# MongoDB connection string
# Development: mongodb://localhost:27017/constructai
# Production: mongodb://username:password@host:port/database?authSource=admin
DATABASE_URL=mongodb://localhost:27017/constructai

# ======================
# Cache Configuration
# ======================
# Redis connection string
# Development: redis://localhost:6379
# Production: redis://:password@host:port
REDIS_URL=redis://localhost:6379

# ======================
# Authentication
# ======================
# JWT Secret Keys (CHANGE IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# ======================
# OAuth2 Configuration
# ======================
# Google OAuth (optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3001/api/v1/auth/google/callback

# ======================
# Server Configuration
# ======================
PORT=3001
BACKEND_URL=http://localhost:3001
FRONTEND_URL=http://localhost:3000

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# ======================
# Frontend Configuration
# ======================
# API URL for frontend to connect to backend
VITE_API_URL=http://localhost:3001
VITE_WS_URL=ws://localhost:3001

# ======================
# File Storage
# ======================
# Google Cloud Storage (optional - leave blank for local storage)
GCS_BUCKET_NAME=
GCS_PROJECT_ID=
GCS_KEY_FILE=

# Local file storage path
FILE_STORAGE_PATH=./uploads
MAX_FILE_SIZE=10485760

# ======================
# AI Services (Optional)
# ======================
# OpenAI API for AI agents
OPENAI_API_KEY=

# ======================
# Monitoring & Logging
# ======================
LOG_LEVEL=info
SENTRY_DSN=

# ======================
# MongoDB Configuration (for Docker)
# ======================
MONGO_USERNAME=admin
MONGO_PASSWORD=changeme
MONGO_DATABASE=constructai

# ======================
# Redis Configuration (for Docker)
# ======================
REDIS_PASSWORD=changeme

# ======================
# Rate Limiting
# ======================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
