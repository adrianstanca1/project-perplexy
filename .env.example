# Environment Configuration Example
# Copy this file to .env and update with your values

# Node Environment
NODE_ENV=production

# MongoDB Configuration
MONGO_USERNAME=admin
MONGO_PASSWORD=changeme
MONGO_DATABASE=constructai
DATABASE_URL=mongodb://mongodb:27017/constructai?replicaSet=rs0

# Redis Configuration
REDIS_URL=redis://redis:6379

# JWT Configuration (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-change-this
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this
SESSION_SECRET=your-super-secret-session-key-change-this

# Frontend Configuration
FRONTEND_URL=http://localhost:3000
VITE_API_URL=http://localhost:3001

# OAuth2 Configuration (Optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:3001/api/v1/auth/google/callback

# File Storage
FILE_STORAGE_PATH=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=py,js,ts,jsx,tsx,json,csv,txt,md,pdf,doc,docx,xls,xlsx

# Email Configuration (Optional - for SendGrid)
SENDGRID_API_KEY=
FROM_EMAIL=noreply@constructai.com

# Google Cloud Storage (Optional)
GCS_BUCKET_NAME=
GCS_PROJECT_ID=
GCS_KEYFILE_PATH=

# Stripe Configuration (Optional - for payments)
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=
