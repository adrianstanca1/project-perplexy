# Backend Environment Configuration
# Copy this file to .env and update with your values

# Node Environment
NODE_ENV=development

# Server Configuration
PORT=3001

# MongoDB Configuration
# For local development with Docker: mongodb://admin:changeme@localhost:27017/constructai?authSource=admin
# For production: Use MongoDB Atlas or other hosted service
DATABASE_URL=mongodb://admin:changeme@localhost:27017/constructai?authSource=admin

# Redis Configuration
# For local development with Docker: redis://localhost:6379
# For production: Use Redis Cloud or other hosted service
REDIS_URL=redis://localhost:6379

# JWT Configuration
# IMPORTANT: Change these secrets in production!
# Generate secure secrets using: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Session Configuration
# IMPORTANT: Change this secret in production!
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# Frontend Configuration
FRONTEND_URL=http://localhost:3000

# OAuth2 Configuration (Optional - for Google Sign-In)
# Get credentials from: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:3001/api/auth/google/callback

# File Storage Configuration
FILE_STORAGE_PATH=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=py,js,ts,jsx,tsx,json,csv,txt,md,pdf,doc,docx,xls,xlsx

# Email Configuration (Optional - for SendGrid)
# Get API key from: https://app.sendgrid.com/
SENDGRID_API_KEY=
FROM_EMAIL=noreply@constructai.com

# Google Cloud Storage (Optional - for file uploads)
GCS_BUCKET_NAME=
GCS_PROJECT_ID=
GCS_KEYFILE_PATH=

# Stripe Configuration (Optional - for payments)
# Get keys from: https://dashboard.stripe.com/
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=
